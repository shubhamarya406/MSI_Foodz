<?xml version="1.0" encoding="utf-8"?>
<soup.neumorphism.NeumorphCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    style="@style/Widget.Neumorph.CardView"
    android:id="@+id/food_item_card_view"
    android:layout_width="match_parent"
    android:layout_height="250dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <soup.neumorphism.NeumorphImageView
            android:id="@+id/food_image_card_view"
            android:layout_width="match_parent"
            android:layout_weight="3"
            android:layout_height="0dp"
            />
        <TextView
            android:id="@+id/food_name_card_view"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:text="Food item name"
            android:textSize="20sp"
            android:textColor="@android:color/black"
            android:padding="10dp"
            android:gravity="center"
            />
    </LinearLayout>

</soup.neumorphism.NeumorphCardView>