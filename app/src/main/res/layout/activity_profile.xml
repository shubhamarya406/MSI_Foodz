<?xml version="1.0" encoding="utf-8"?>
<ScrollView android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android" >
<LinearLayout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/graylight"
    tools:context=".Profile"
    >
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="405dp">
        <LinearLayout
            android:background="@drawable/gradientbackground"
            android:layout_width="match_parent"
            android:layout_height="350dp"
            android:orientation="vertical">
            <ImageView
                android:layout_marginTop="35dp"
                android:layout_gravity="center_horizontal"
                android:layout_width="150dp"
                android:layout_marginBottom="30dp"
                android:layout_height="150dp"
                android:id="@+id/image_id_profile"
                android:src="@drawable/ic_profile" />

            <TextView
                android:id="@+id/name_id_profile"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="20dp"
                android:textSize="20sp"
                android:textStyle="italic|bold"
                android:text="Name" />
        </LinearLayout>
        <soup.neumorphism.NeumorphCardView
            android:layout_width="400dp"
            android:layout_height="120dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="275dp"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:weightSum="2">
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="1"

                    android:orientation="vertical"
                    android:layout_height="match_parent"
                    >
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:text="Wallet Balance"
                        android:paddingTop="10dp"
                        android:gravity="center_vertical|center_horizontal"
                        android:textSize="20sp"
                        />
                    <TextView
                        android:id="@+id/wallet_balance_id_profile"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:text="0"
                        android:textStyle="bold"
                        android:textSize="20sp"
                        android:paddingTop="20dp"
                        android:gravity="center_vertical|center_horizontal"
                        android:textColor="@color/colorPrimaryDark"/>

                </LinearLayout>
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="1"

                    android:orientation="vertical"
                    android:layout_height="match_parent"
                    >
                    <TextView

                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:text="Number of orders"
                        android:paddingTop="10dp"
                        android:gravity="center_vertical|center_horizontal"
                        android:textSize="20sp"
                        />
                    <TextView
                        android:id="@+id/num_order_id_profile"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:text="0"
                        android:paddingTop="20dp"
                        android:textStyle="bold"
                        android:textSize="20sp"
                        android:gravity="center_horizontal|center_vertical"
                        android:textColor="@color/colorPrimaryDark"/>

                </LinearLayout>

            </LinearLayout>

        </soup.neumorphism.NeumorphCardView>
    </RelativeLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_gravity="center_horizontal"
        android:orientation="vertical"
        android:layout_marginTop="45dp"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"

            android:orientation="horizontal"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_width="36dp"
                android:src="@drawable/ic_baseline_email_24"

                android:layout_height="36dp"/>
            <TextView
                android:id="@+id/email_id_profile"
                android:layout_width="wrap_content"
                android:text="Parichayman2@gmail.com"
                android:paddingLeft="20dp"
                android:layout_gravity="center_vertical"

                android:layout_height="wrap_content"/>
        </LinearLayout>
        <LinearLayout
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_width="36dp"
                android:src="@drawable/ic_baseline_phone_24"

                android:layout_height="36dp"/>
            <TextView
                android:id="@+id/phone_num_id_profile"
                android:layout_width="wrap_content"
                android:text="8802571144"
                android:paddingLeft="20dp"
                android:layout_gravity="center_vertical"
                android:layout_height="wrap_content"/>
        </LinearLayout>
    </LinearLayout>

    <soup.neumorphism.NeumorphButton
        android:layout_width="180dp"
        android:layout_height="80dp"
        android:text="Edit Details"
        android:textSize="20sp"
        android:gravity="center"
        android:layout_gravity="bottom|center"
        android:layout_marginTop="50dp"
        style="@style/Widget.Neumorph.CardView"
        android:shadowRadius="@integer/button_pressed_animation_delay"
        app:neumorph_backgroundColor="@android:color/transparent"
        />
</LinearLayout>
</ScrollView>