<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:orientation="vertical"
    android:background="@drawable/backg"
    android:backgroundTint="#DC7C28"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <View
            android:id="@+id/firstLine"
            android:layout_width="20dp"
            android:layout_height="60dp"
            android:layout_marginLeft="8dp"
            android:background="@drawable/purple_line"
            android:layout_centerHorizontal="true"/>
        <View
            android:id="@+id/secondLine"
            android:layout_width="20dp"
            android:layout_height="150dp"
            android:layout_marginLeft="8dp"
            android:background="@drawable/red_line"
            android:layout_toRightOf="@id/firstLine"/>
        <View
            android:id="@+id/thirdLine"
            android:layout_width="20dp"
            android:layout_height="250dp"
            android:layout_marginLeft="8dp"
            android:background="@drawable/purple_line"
            android:layout_toRightOf="@id/secondLine"/>
        <View
            android:id="@+id/fourthLine"
            android:layout_width="20dp"
            android:layout_height="180dp"
            android:layout_marginLeft="8dp"
            android:background="@drawable/red_line"
            android:layout_toRightOf="@id/thirdLine"/>
        <View
            android:id="@+id/fifthLine"
            android:layout_width="20dp"
            android:layout_height="220dp"
            android:layout_marginLeft="8dp"
            android:background="@drawable/green_line"
            android:layout_toRightOf="@id/fourthLine"/>
        <View
            android:id="@+id/sixthLine"
            android:layout_width="20dp"
            android:layout_height="120dp"
            android:layout_marginLeft="8dp"
            android:background="@drawable/purple_line"
            android:layout_toRightOf="@id/fifthLine"/>
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <soup.neumorphism.NeumorphImageView
            android:id="@+id/logo"
            android:layout_width="match_parent"
            android:layout_height="350dp"
            android:src="@drawable/sps"
            android:transitionName="logo_img"
            android:layout_centerHorizontal="true"/>
        <soup.neumorphism.NeumorphTextView
            android:id="@+id/name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="MSI FOODZ"
            android:textAllCaps="true"
            android:transitionName="logo_name"
            android:fontFamily="@font/bungee"
            android:layout_below="@id/logo"
            android:textSize="40sp"
            android:gravity="center"
            android:textColor="#000"
            />
    </RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom">

            <TextView
                android:id="@+id/slogan"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="20dp"
                android:fontFamily="cursive"
                android:textColor="#000"
                android:textStyle="bold"
                android:text="Food Ordering App For MSIans"
                android:textSize="30sp" />

        </RelativeLayout>
    </LinearLayout>
</LinearLayout>